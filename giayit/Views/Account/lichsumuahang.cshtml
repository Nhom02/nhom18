@model IEnumerable<giayit.ServiceReferenceHoaDon.hoadon>


@{
    ViewBag.Title = "lichsumuahang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="columncenter">
               <div class="header-center">Lịch sử mua hàng</div>
               <div style="width:580px;height:500px;" > 
             
               
                   
                	<table id="t02" align="center" width="580" style="margin-top: 0px; font-size:14px; margin-bottom: 20px">
                    	<tr align="center" bgcolor="#f6f6f6" style="font-weight:bold; font-size: 16px;">
                        	<th>Mã hóa đơn</th>                            
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>  
                            <th>Chức năng</th>                          
                        </tr>
                        @foreach(var line in Model)
                        {
                            <tr align="center" >
                        	    <td>
                                    
                            	     @line.mahoadon                                 
                                </td>
                                <td>
                                    @line.ngaymuahang                                 
                                </td>
                                <td>
                            	    @String.Format("{0:0,0 VNĐ}", Convert.ToInt32(line.tongtien)) 
                                </td>
                                <td>
                            	    @line.tinhtrang
                                </td>
                                <td>
                            	   <a href="../account/chitietmuahang?mahoadon=@line.mahoadon"><img src="../../Image/Zoom.png" width="15px" height="15px"/></a>
                                </td>
                                
                            </tr>
                        }
                        
                                                                        
                        
                        
                    </table>
                    <div>@{Html.RenderAction("Index", "page", new { currentpage = "../account/lichsumuahang?ma="+@ViewBag.ma+"", totalpages = ViewBag.TotalPages});} </div>        
                
                   <a href="/home/index" style="font-size: 17px; color:#333; font-weight:bold; margin:10px; float:left">
                       <img src="../Image/back.png" style="height: 10px; width: 15px" />Tiếp tục mua hàng</a>
               </div>  
            </div>
