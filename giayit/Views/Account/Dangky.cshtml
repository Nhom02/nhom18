@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "GiayIT - Đăng ký tài khoản";
}
<div class="columncenter">
    <div class="header-center">Đăng ký tài khoản </div>
    <div style="width:580px;height:auto" >
<div class="formn">
    <form  name="fthem"  action = "Dangky" method = "post"  onsubmit="return kiemtradk()" >
        @if (ViewBag.chuoitb != null)
        {            <script> alert(' Tên đăng nhập đã tồn tại');
            </script>  
        }
        <fieldset style="width:auto">
            <legend style="flex-item-align:center">Tài khoản</legend>
            <div class="editor-label">
                <p></p>Tên đăng nhập
            </div>
            <div class="editor-field">
                <input type="text" name="username" id="tensp" oninput="return checkID()"/><b><font size="-1" color="red"><userID></userID></font></b><img name="userID" src="" /><br />
            </div>
            <div class="editor-label">
                Mật khẩu
            </div>
            <div class="editor-field">
                <input type="password" name="password" oninput="return checkpasss()"/><b><font size="-1" color="red"><pass></pass></font></b><img name="pass" src="" /><br />
            </div>
            <div class="editor-label">
                Nhập lại mật khẩu
            </div>
            <div class="editor-field">
                <input type="password" name="repassword" oninput="return checkrpass()"/><b><font size="-1" color="red"><rpass></rpass></font></b><img name="rpass" src="" /><br />
            </div>
            <div class="editor-label">
                Họ tên
            </div>
            <div class="editor-field">
                 <input type="text" name="hoten" oninput="return checkname()"/><b><font size="-1" color="red"><name></name></font></b><img name="name" src="" /><br />
            </div>
             <div class="editor-label">
                Số điện thoại
            </div>
            <div class="editor-field">
                 <input type="text" name="sdt" oninput="return checkphone()" /><b><font size="-1" color="red"><phone></phone></font></b><img name="phone" src="" /><br />
            </div>
            <div class="editor-label">
                Giới tính
            </div>
            <div class="editor-field">
                <select name="gioitinh" >
                      <option value="1">Nam</option>
                       <option value="0">Nữ</option>
    	         </select>
            </div>
             <div class="editor-label">
                Địa chỉ
            </div>
            <div class="editor-field">
                <textarea name="diachi" oninput="return checkadd()"></textarea><b><font size="-1" color="red"><add></add></font></b><img name="add" src="" /><br />
                
            </div>
             <div class="editor-label">
                Email
            </div>
            <div class="editor-field">
                 <input type="text" name="email" oninput="return checkmail()"/><b><font size="-1" color="red"><mail></mail></font></b><img name="mail" src="" /><br />
            </div>
           
            <div class="editor-label"> 
            
                <input type="submit" value="Đăng ký" style="height:40px; width: 120px; background-color:#ff6a00; color:#FFF; font-size:17px; font-weight:bold; cursor:pointer" />
            </div>
        </fieldset>
            </form>
    <div>
       <a href="#" style="font-size: 17px; color:#333; font-weight:bold; margin:10px; float:left"><img src="../Image/back.png" style="height: 10px; width: 15px" />Trở về trang chủ</a>
    </div>
</div>
        </div>
    </div>
